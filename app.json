{
  "expo": {
    "name": "SpartansAttend",
    "slug": "spartans-attend",
    "version": "1.2.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "spartansattend",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/b3eb75d5-b321-456a-add6-7b488e0d5266"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.gaurav.spartansattend",
      "buildNumber": "3.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan attendance QR codes.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to verify proximity during attendance marking.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to verify attendance, even when the app is in the background.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.gaurav.spartansattend",
      "versionCode": 2,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "privacy": "public",
    "plugins": [
      "expo-secure-store",
      "expo-location"
    ],
    "extra": {
      "eas": {
        "projectId": "b3eb75d5-b321-456a-add6-7b488e0d5266"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
